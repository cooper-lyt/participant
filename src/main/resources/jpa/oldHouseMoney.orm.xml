<?xml version="1.0" encoding="UTF-8"?>

<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
                 version="2.0">

    <entity class="cc.coopersoft.house.sale.data.OldHouseMoney" access="FIELD">
        <table name="OLD_HOUSE_MONEY" catalog="CONTRACT"/>

        <attributes>

            <id name="id">
                <column name="ID" unique="true" nullable="false" length="32"/>
            </id>


            <basic name="bankName">
                <column name="BANK_NAME" length="512"/>
            </basic>

            <basic name="cardName">
                <column name="CARD_NAME" length="50"/>
            </basic>

            <basic name="cardNumber">
                <column name="CARD_NUMBER" length="128"/>
            </basic>

        </attributes>
    </entity>


</entity-mappings>